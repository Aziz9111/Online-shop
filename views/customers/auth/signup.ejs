<%- include("../../shared/includes/head", {PageTitle: "Signup"}) %>
<link rel="stylesheet" href="styles/forms.css">
<link rel="stylesheet" href="styles/auth.css">
</head>
<body>
  <%- include("../../shared/includes/header") %>
  <main>
    <h1>Creat New Account</h1>
    <% if (inputData.errorMessage) { %>
      <section class="alert">
         <h2>Invalid Input</h2>
         <p><%= inputData.errorMessage %></p>
      </section> 
   <% } %>
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
   <div>
      <label for="name">Enter Your Full Name</label>
      <input type="text" id="name" name="name" value="<%= inputData.name %>" required> 
   </div>

   <div>
      <label for="email">Enter Your Email</label>
      <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
   </div>

   <div>
      <label for="confirmedEmail">Confirm Your Email</label>
      <input type="email" id="confirmedEmail" name="confirmedEmail" value="<%= inputData.confirmedEmail %>" required>
   </div> 

   <div>
      <label for="password">Enter Your Password</label>
      <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
   </div>

   <div>
      <label for="confirmedPassword">Confirm Your Password</label>
      <input 
        type="password" 
        id="confirmedPassword" 
        name="confirmedPassword"  
        value="<%= inputData.confirmedPassword %>"
        minlength="6" 
        required>
   </div>

   <hr>

   <p>Address Details: </p>
   <div>
      <label for="street">Street</label>
      <input type="text" id="street" name="street" value="<%= inputData.street %>" required>
   </div>

   <div>
      <label for="city">City</label>
      <input type="text" id="city" name="city" value="<%= inputData.city %>" required>
   </div>

 <button class="btn">Create Account</button>
 <p id="switch-form">If you already have an account <a href="/login">Login</a></p>
</form>
  </main>
<%- include("../../shared/includes/footer") %>